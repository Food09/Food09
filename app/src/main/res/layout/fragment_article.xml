<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ArticleFragment"
    android:background="@color/colorWhite"
    android:clickable="true">


    <RelativeLayout
        android:id="@+id/top_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-60dp"
            android:background="@drawable/ic_baseline_fastfood_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/UserProfileImageView"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_below="@+id/article_image"
            app:civ_border_color="#E6E6E6"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/userIDTextView_article"
            android:layout_below="@+id/article_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/UserProfileImageView"
            android:text="Charlie"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userProfileTextView_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userIDTextView_article"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"

            android:layout_toRightOf="@+id/UserProfileImageView"
            android:text="저는 미래관에 사는 야채곱창을 좋아하는 화석입니다."
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/titleTextView_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserProfileImageView"
            android:layout_marginLeft="20dp"

            android:text="곱창 같이 드실 분 구해요!"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contentTextView_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView_article"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:maxLength="350"
            android:text="야곱야곱에서 야채곱창 시키려고 하는데, 탑승하실 분 있으면 들어와주세요~"
            android:textColor="#000000"
            android:textSize="15dp" />


        <ImageView
            android:id="@+id/person_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentTextView_article"
            android:layout_alignLeft="@+id/contentTextView_article"
            android:layout_marginTop="32dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/ic_people" />

        <TextView
            android:id="@+id/userNumberTextView_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/contentTextView_article"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/person_imageView"

            android:text="1 / 4"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonEnter_article"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/userNumberTextView_article"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_border"


            android:text="참여하기"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/buttonEnter_article"

            android:layout_alignParentRight="true"

            android:layout_marginRight="-20dp"
            android:background="@drawable/half_circle_border"
            android:layout_marginTop="20dp"
            android:paddingRight="30dp"
            android:text="삭제"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/third"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/second"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/half_circle_border"
            android:paddingRight="30dp"
            android:layout_marginRight="-20dp"
            android:text="수정"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />


    </RelativeLayout>



</FrameLayout>